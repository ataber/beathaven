  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <ul class="list-inline">
          <li>
            <%= link_to "Home", root_path %>
          </li>
         <li class="footer-menu-divider">&sdot;</li>
          <li>
            <a href="mailto:support@beathaven.com">Contact</a>
          </li>
        </ul>
        <p class="copyright text-muted small">Copyright &copy; BeatHaven 2014. All Rights Reserved</p>
